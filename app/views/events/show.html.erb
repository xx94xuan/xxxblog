<%= react_component("LinkButton", props: {text: 'Back', link: 'javascript:history.back()'}, prerender: false) %>

<div class='event-container'>
  <div class="done-label <%= @event.done ? 'thumbsup-icon' : '' %>"><%= @event.done ? 'Done ' : 'Pending...' %></div>
  <h1><%= @event.name %></h1>
  <h2><%= @event.start_date %></h2>
  <p>
    <strong>From </strong>
    <%= @event.start_hour %>
    <strong>To</strong>
    <%= @event.end_hour %>
  </p>
  <br>

  <p><strong>Description:</strong><br> <%= text_to_html(@event.description).html_safe %></p>
</div>

<%= react_component('LinkButton', props: {text: 'Edit', link: edit_event_path(:id => @event.id)}) %>
<%= react_component('LinkButton', props: {text: 'Delete', link: delete_event_path(:id => @event.id), data: {'data-method': 'DELETE', 'data-confirm': 'Are you sure?'}}) %>
