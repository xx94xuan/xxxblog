<%= react_component("LinkButton", props: {text: I18n.t('button.newOnePieceLabel'), link: new_piece_path}, prerender: false) %>

<% if @pieces.present? %>
  <h1 class='header'><%= I18n.t('pieces.allPiecesText') %></h1>
  <ul>
    <% @pieces.each do |piece| %>
      <li class='piece-section'>
        <h3 class='headline'>
          <span class='mobile updated-time'>[<%= (piece.created_at || piece.updated_at).strftime("%D") %>] </span>
          <a href=<%= piece_path(:id => piece.id) %> >
            <%= piece.title %>
          </a>
          <span class='desktop updated-time'> - [<%= (piece.created_at || piece.updated_at).strftime("%b %d, %Y") %>]</span>
        </h3>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class='no-result'>There's no results, you can create one <a href=<%= new_piece_path %>>here</a></p>
<% end %>